    <EditText
        android:id="@+id/texto2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Valor do alcool"
        android:inputType="number" />

    <Button
        android:id="@+id/botao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
